<section class="is-medium is-flex is-flex-direction-column">
  <div class="has-text-centered p-4">
    <h3 class="title is-2">Search for books</h3>
  </div>
  <div class="columns">
    
    <%= form_with url: @currentURL, method: :get, class: "column is-6 is-offset-3" do %>
      <div class="field has-addons column is-full columns is-gapless">
        <div class="control column is-11">
          <%= text_field_tag :searchTerm, "Enter a genre, author, title, place, person...", class: "input" %>
        </div>
        <div class="control column">
          <%= submit_tag("Search", class: "button is-link")%>
        </div>
      </div>
    <% end %>
  </div>
</section>
